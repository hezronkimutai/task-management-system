# Database Configuration
DB_URL=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
DB_DRIVER=org.h2.Driver
DB_USERNAME=sa
DB_PASSWORD=your_db_password_here

# JWT Configuration (IMPORTANT: Change this in production!)
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters_long
JWT_EXPIRATION=86400

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# H2 Console Configuration (Development Only - Disable in Production!)
H2_CONSOLE_ENABLED=true
H2_CONSOLE_PATH=/h2-console
H2_CONSOLE_WEB_ALLOW_OTHERS=false

# JPA Configuration
JPA_DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_TASKMANAGEMENT=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_HIBERNATE_SQL=WARN
